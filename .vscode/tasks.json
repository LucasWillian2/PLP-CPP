{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Planner Project (Compilar Projeto Planner)",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // Caminhos simplificados, sem o PLP extra
                "${workspaceFolder}/PLP/main.cpp",
                "${workspaceFolder}/PLP/Planner.cpp",
                "${workspaceFolder}/PLP/Meta.cpp",
                "${workspaceFolder}/PLP/Tarefa.cpp",
                "${workspaceFolder}/PLP/Lembrete.cpp",
                "-o",
                // Coloca o execut√°vel na pasta raiz do projeto
                "${workspaceFolder}/planner.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compila e junta todos os ficheiros do projeto Planner."
        }
    ]
}